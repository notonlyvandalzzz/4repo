<h2 align="center">Welcome to PizzaShop</h2>


<div class="row">
	<div class="col-md-3">
	<img src="/images/logo.png" width="200" class="img-rounded">
	</div>
	<div class="col-md-9">
		<ul id="prod-list" class="row">
			<% @prod_all_list.each do |product| %>

				<li class="col-sm-4">
				<img src="<%=product.path_to_pic%>" width="200" alt="<%=product.title%>" class="img-rounded">
				<h4><%=product.title%></h4>
				<h5><%=product.desc%></h5>
				<h5>Размер: <%=product.size%></h5>
				<h5>Цена: <%=product.price%></h5>
				<button class="btn btn-primary btn-large" onclick="something()">ClickMe</button>
				</li>

			<%end%>
		</ul>
	</div>
</div>